<h1>To do</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
    <i class="fa-solid fa-square-check"></i>
    <% else %>
    <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "delete", delete_path(task.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

<p><%= link_to "Create a new task", tasks_new_path %></p>
